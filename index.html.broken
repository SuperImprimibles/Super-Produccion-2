<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Producción - Ultra Compacto</title>
    <link rel="stylesheet" href="prototipo-ultra-compacto.css">
</head>

<body>
    <div class="panel-container">

        <!-- SECCIÓN 1: PROPIEDADES -->
        <div class="panel-section active" data-section="0">
            <div class="section-title">TEMÁTICA</div>
            <input type="text" class="input-field" placeholder="Temática">
            <select class="select-field">
                <option>Nombre:</option>
                <option>Ana</option>
                <option>Juan</option>
                <option>María</option>
            </select>
            <input type="number" class="input-field" placeholder="Edad:" min="1" max="50">
            <select class="select-field">
                <option>Público:</option>
                <option>General</option>
                <option>Masculino</option>
                <option>Femenino</option>
            </select>

            <div class="section-divider"></div>

            <div class="section-title">TEXTO</div>
            <div class="text-preview">NOMBRE</div>

            <div class="section-divider"></div>

            <div class="section-title">COLORES</div>
            <div class="color-palette">
                <input type="color" class="color-circle" value="#FF6B6B">
                <input type="color" class="color-circle" value="#4ECDC4">
                <input type="color" class="color-circle" value="#FFE66D">
            </div>

            <div class="section-divider"></div>

            <div class="section-title">PRESETS</div>
            <select class="select-field">
                <option>Seleccionar...</option>
                <option>Preset 1</option>
                <option>Preset 2</option>
                <option>Preset 3</option>
            </select>
            <div class="preset-buttons">
                <button class="preset-btn">Cargar</button>
                <button class="preset-btn save">Guardar</button>
            </div>

            <!-- NAVEGACIÓN INTERNA -->
            <div class="dots-navigation">
                <button class="nav-dot active" onclick="switchSection(0)">
                    <svg viewBox="0 0 24 24">
                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                    </svg>
                </button>
                <button class="nav-dot" onclick="switchSection(1)">
                    <svg viewBox="0 0 24 24">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </button>
                <button class="nav-dot" onclick="switchSection(2)">
                    <svg viewBox="0 0 24 24">
                        <polyline points="4 7 4 4 20 4 20 7"></polyline>
                        <line x1="9" y1="20" x2="15" y2="20"></line>
                        <line x1="12" y1="4" x2="12" y2="20"></line>
                    </svg>
                </button>
                <button class="nav-dot" onclick="switchSection(3)">
                    <svg viewBox="0 0 24 24">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                        <polyline points="21 15 16 10 5 21"></polyline>
                    </svg>
                </button>
            </div>
        </div>

        <!-- SECCIÓN 2: PERSONAJES/FONDOS -->
        <div class="panel-section" data-section="1">
            <div class="tabs-container">
                <button class="tab-btn active" onclick="switchTab('personajes')">Personajes</button>
                <button class="tab-btn" onclick="switchTab('fondos')">Fondos</button>
            </div>

            <div class="tab-content active" data-tab="personajes">
                <div class="grid-container">
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item logo">LOGO</div>
                    <div class="grid-item trash">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                            </path>
                        </svg>
                    </div>
                </div>
                <button class="recolector-btn">Recolector</button>
            </div>

            <div class="tab-content" data-tab="fondos">
                <div class="grid-container">
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item">+</div>
                    <div class="grid-item letter">A</div>
                    <div class="grid-item letter">B</div>
                    <div class="grid-item letter">C</div>
                    <div class="grid-item trash">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                            </path>
                        </svg>
                    </div>
                </div>
                <button class="recolector-btn">Recolector</button>
            </div>

            <!-- NAVEGACIÓN INTERNA -->
            <div class="dots-navigation">
                <button class="nav-dot" onclick="switchSection(0)">
                    <svg viewBox="0 0 24 24">
                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                    </svg>
                </button>
                <button class="nav-dot active" onclick="switchSection(1)">
                    <svg viewBox="0 0 24 24">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </button>
                <button class="nav-dot" onclick="switchSection(2)">
                    <svg viewBox="0 0 24 24">
                        <polyline points="4 7 4 4 20 4 20 7"></polyline>
                        <line x1="9" y1="20" x2="15" y2="20"></line>
                        <line x1="12" y1="4" x2="12" y2="20"></line>
                    </svg>
                </button>
                <button class="nav-dot" onclick="switchSection(3)">
                    <svg viewBox="0 0 24 24">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                        <polyline points="21 15 16 10 5 21"></polyline>
                    </svg>
                </button>
            </div>
        </div>

        <!-- SECCIÓN 3: DISEÑADOR DE TEXTO -->
        <div class="panel-section" data-section="2">
            <div class="section-title">DISEÑADOR DE TEXTO</div>

            <div style="display: flex; gap: 4px; align-items: center; margin-bottom: 3px;">
                <select class="select-field" style="flex: 1; margin-bottom: 0;">
                    <option>Aptos (Cuerpo)</option>
                    <option>Arial</option>
                    <option>Times New Roman</option>
                    <option>Calibri</option>
                </select>
                <input type="number" class="input-field" value="12" min="8" max="72"
                    style="width: 45px; margin-bottom: 0; text-align: center;">
                <button class="format-btn" style="min-width: 28px; padding: 6px;">+</button>
                <button class="format-btn" style="min-width: 28px; padding: 6px;">-</button>
            </div>

            <div class="text-format-toolbar">
                <select class="format-btn size-dropdown">
                    <option>12</option>
                    <option>14</option>
                    <option>16</option>
                    <option>18</option>
                    <option>24</option>
                </select>
                <button class="format-btn">A+</button>
                <button class="format-btn">A-</button>
                <button class="format-btn">B</button>
                <button class="format-btn">I</button>
                <button class="format-btn">S</button>
            </div>

            <div class="alignment-group">
                <button class="format-btn">AB</button>
                <button class="format-btn">Ab</button>
                <button class="format-btn">ab</button>
                <button class="format-btn" style="flex: 1;">☰</button>
                <button class="format-btn" style="flex: 1;">☰</button>
                <button class="format-btn" style="flex: 1;">☰</button>
            </div>

            <div class="position-selector">
                <button class="position-btn" data-position="1">1</button>
                <button class="position-btn" data-position="2">2</button>
                <button class="position-btn active" data-position="3">3</button>
                <button class="position-btn" data-position="4">4</button>
                <button class="position-btn" data-position="5">5</button>
            </div>

            <div class="position-marks" style="display: none;">
                <span class="position-mark">1</span>
                <span class="position-mark">2</span>
                <span class="position-mark">3</span>
                <span class="position-mark">4</span>
                <span class="position-mark">5</span>
            </div>
        </div>

        <div class="section-divider"></div>

        <div class="control-label">RELLENO</div>
        <div class="relleno-container">
            <div class="checkbox-group" style="flex-direction: column; gap: 6px;">
                <div class="checkbox-item">
                    <input type="checkbox" id="solido" onchange="toggleFillOption('solido')">
                    <label for="solido">Sólido</label>
                </div>
                <div id="solido-controls" style="display: none; padding-left: 20px; margin-top: 2px;">
                    <input type="color" class="color-circle" value="#FF0000" style="width: 28px; height: 28px;">
                </div>

                <div class="checkbox-item">
                    <input type="checkbox" id="degradado" onchange="toggleFillOption('degradado')">
                    <label for="degradado">Degradado</label>
                </div>
                <div id="degradado-controls"
                    style="display: none; padding-left: 20px; margin-top: 2px; display: flex; gap: 4px;">
                    <input type="color" class="color-circle" value="#FF0000" style="width: 24px; height: 24px;">
                    <input type="color" class="color-circle" value="#00FF00" style="width: 24px; height: 24px;">
                    <input type="color" class="color-circle" value="#0000FF" style="width: 24px; height: 24px;">
                </div>

                <div class="checkbox-item">
                    <input type="checkbox" id="imagen" onchange="toggleFillOption('imagen')">
                    <label for="imagen">Imagen</label>
                </div>
                <div id="imagen-controls" style="display: none; padding-left: 20px; margin-top: 2px;">
                    <button class="preset-btn" style="font-size: 10px; padding: 4px 8px;">Seleccionar imagen...</button>
                </div>
            </div>
        </div>

        <div class="control-label">SOMBRA</div>
        <div class="slider-control">
            <div class="slider-label">Color</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Transparencia</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Tamaño</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Desenfoque</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Ángulo</div>
            <input type="range" class="slider-input" min="0" max="360" value="0">
            <div class="slider-value">0°</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Distancia</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>

        <div class="section-divider"></div>

        <div class="control-label">ILUMINACIÓN</div>
        <div class="slider-control">
            <div class="slider-label">Color</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Tamaño</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Transparencia</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Desenfoque</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>

        <div class="section-divider"></div>

        <div class="control-label">REFLEJO</div>
        <div class="slider-control">
            <div class="slider-label">Transparencia</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Tamaño</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Desenfoque</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Distancia</div>
            <input type="range" class="slider-input" min="0" max="100" value="0">
            <div class="slider-value">0</div>
        </div>

        <div class="section-divider"></div>

        <div class="control-label">GIRO 3D</div>
        <div class="slider-control">
            <div class="slider-label">X</div>
            <input type="range" class="slider-input" min="0" max="360" value="90">
            <div class="slider-value">90°</div>
        </div>
        <div class="slider-control">
            <div class="slider-label">Y</div>
            <input type="range" class="slider-input" min="0" max="360" value="0">
            const controls = document.getElementById(option + '-controls');

            if (checkbox.checked) {
            controls.style.display = option === 'degradado' ? 'flex' : 'block';
            } else {
            controls.style.display = 'none';
            }
            }

            // Section switching
            function switchSection(index) {
            const sections = document.querySelectorAll('.panel-section');
            const dots = document.querySelectorAll('.nav-dot');

            sections.forEach((section, i) => {
            section.classList.toggle('active', i === index);
            });

            dots.forEach((dot, i) => {
            dot.classList.toggle('active', i === index);
            });
            }

            // Tab switching
            function switchTab(tabName) {
            const tabs = document.querySelectorAll('.tab-content');
            const buttons = document.querySelectorAll('.tab-btn');

            tabs.forEach(tab => {
            tab.classList.toggle('active', tab.dataset.tab === tabName);
            });

            buttons.forEach(btn => {
            btn.classList.toggle('active', btn.textContent.toLowerCase().includes(tabName));
            });
            }
            </script>
</body>

</html>